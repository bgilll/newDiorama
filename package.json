{
  "name": "diorama",
  "version": "1.0.0",
  "description": "Diorama",
  "author": "Happy Accident",
  "main": "game.js",
  "scripts": {
    "start": "run-p dev:sass webpack-server",
    "build": "run-s prebuild build:dir build:js build:sass",
    "prebuild": "run-s clean lint",
    "clean": "rimraf build",
    "lint": "eslint src/js/",
    "webpack-server": "set NODE_ENV=0&& webpack-dev-server --progress --color --open --hot --port 3000",
    "webpack-watch": "set NODE_ENV=0&& webpack --progress --color --watch --hot",
    "dev:sass": "node-sass -w -r src/sass/ -o src/public/assets/css/",
    "dev:js": "set NODE_ENV=0&& webpack",
    "build:dir": "copyfiles -u 1 src/public/**/* build/",
    "build:sass": "node-sass --output-style compressed src/sass/ -o build/public/assets/css/",
    "build:js": "set NODE_ENV=1&& webpack --progress --color"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "copyfiles": "^2.3.0",
    "eslint": "^7.5.0",
    "html-loader": "^1.1.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "webpack": "^4.44.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "@tweenjs/tween.js": "^18.6.0",
    "dat.gui": "^0.7.7",
    "gsap": "^3.4.2",
    "min-signal": "0.0.6",
    "mobile-detect": "^1.4.4",
    "navigo": "^7.1.2",
    "npm-check-updates": "^7.0.2",
    "pathfinding": "^0.4.18",
    "simplex-noise": "^2.4.0",
    "stats.js": "^0.17.0",
    "three": "^0.118.3",
    "three-fbx-loader": "^1.0.3",
    "three-gltf-loader": "^1.111.0",
    "three-orbitcontrols": "^2.110.3"
  }
}
